                                                    <!DOCTYPE html>
                                                    <html lang="ar">
                                                    <head>
                                                        <meta charset="UTF-8">
                                                        <title>الرسائل</title>
                                                        <link rel="stylesheet" href="/styles.css">
                                                        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

                                                    </head>
                                                    <body>
                                                        <div class="container mt-5">
                                                            <h1>الرسائل</h1>
                                                            <p>عدد الزوار: <%= visitorCount %></p>
                                                            <% if (messages.length === 0) { %>
                                                                <p>لا توجد رسائل</p>
                                                            <% } else { %>
                                                                <% messages.forEach(message => { %>
                                                                    <div class="message-card">
                                                                        <p class="message-content"><%= message.content %></p>
                                                                        <% if (message.reply) { %>
                                                                            <p>رد: <%= message.reply %></p>
                                                                        <% } else { %>
                                                                            <form action="/reply/<%= message.id %>" method="post" style="display:inline;">
                                                                                <input type="hidden" name="admin" value="<%= adminPassword %>">
                                                                                <button type="submit" class="btn btn-primary mt-3">رد على الرسالة</button>
                                                                            </form>
                                                                        <% } %>
                                                                        <form action="/delete/<%= message.id %>" method="post" style="display:inline;">
                                                                            <input type="hidden" name="admin" value="<%= abdo3mk %>">
                                                                            <button type="submit" class="btn btn-danger mt-3">حذف الرسالة</button>
                                                                        </form>
                                                                    </div>
                                                                <% }) %>
                                                            <% } %>
                                                        </div>
                                                    </body>
                                                    </html>
